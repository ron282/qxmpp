set -e

brew update
brew unlink python@3
brew install python@3 || true
brew link --overwrite python@3

case "$CONFIG" in
full*)
    brew install doxygen \
        gstreamer gst-plugins-base gst-plugins-good gst-plugins-ugly
    ;;
esac
